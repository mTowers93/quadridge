@model  Quadridge2.ViewModels.Users.UserEditViewModel
@{
    ViewBag.Title = "UserForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <div class="card">
    <div class="card-body">
      @using (Html.BeginForm("Edit", "UsersAdmin", FormMethod.Post))
      {
        @Html.HiddenFor(c => c.user.Id)
      <div class="form-row">
        <div class="col-3">
          <div class="form-group">
            @Html.LabelFor(c => c.user.UserName, new { @class = "form-control-label" })
            @Html.TextBoxFor(c => c.user.UserName, new { @class = "form-control", @autofocus = "autofocus" })
            @Html.ValidationMessageFor(c => c.user.UserName)
          </div>
        </div>

        <div class="col-3">
          <div class="form-group">
            @Html.LabelFor(c => c.user.FirstName, new { @class = "form-control-label" })
            @Html.TextBoxFor(c => c.user.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.user.FirstName)
          </div>
        </div>

        <div class="col-3">
          <div class="form-group">
            @Html.LabelFor(c => c.user.LastName, new { @class = "form-control-label" })
            @Html.TextBoxFor(c => c.user.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.user.LastName)
          </div>
        </div>
      </div>

        <div class="form-row">

          <div class="col-3">
            <div class="form-group">
              @Html.LabelFor(c => c.user.Email, new { @class = "form-control-label" })
              @Html.TextBoxFor(c => c.user.Email, new { @class = "form-control" })
              @Html.ValidationMessageFor(c => c.user.Email)
            </div>
          </div>
          <div class="col-3">
            <div class="form-group">
              @Html.LabelFor(c => c.user.Birthday, new { @class = "form-control-label" })
              @Html.TextBoxFor(c => c.user.Birthday, new { @class = "form-control datepicker-here", @data_language = "en", @autocomplete = "off" })
            </div>
          </div>
        </div>
        <div class="form-row">
          <div class="col-3">
            <div class="form-group">
              @Html.LabelFor(c => c.user.PhoneNumber, new { @class = "form-control-label" })
              @Html.TextBoxFor(c => c.user.PhoneNumber, new { @class = "form-control" })
              @Html.ValidationMessageFor(c => c.user.PhoneNumber)
            </div>
          </div>
        </div>

        <div class="col-4">
          <div class="form-row">
              @foreach(var Role in Model.rolesList)
              {
                <input type="checkbox" name="SelectedRole" value="@Role.Value" checked="@Role.Selected" class="custom-checkbox" />
                @Html.Label(Role.Value, new { @class="form-control-label"})
              }
          </div>
        </div>

        <hr />

        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Save</button>
      }
    </div>
  </div>

