@model Quadridge2.ViewModels.Companies.CompanyDetailsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}   
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">

        @using (Html.BeginForm("AssignContacts", "Companies", new { id = Model.Company.Id }))
        {
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Choose Contacts</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table class="display table table-light table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Select</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contact in Model.Contacts)
                        {
                            <tr>
                                <td>@contact.Fullname</td>
                                <td><input type="checkbox" name="contacts" value="@contact.Id" id="check_@contact.Id" /></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default">Submit</button><button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
        }
    </div>
</div>

<div class="card">
    <div class="card-header">
        @Html.ActionLink("Edit", "Edit", "Companies", new { id = Model.Company.Id } ,  new { @class= "btn btn-info float-right" })
    </div>
    <div class="card-body">
        <div class="form-row">
            <div class="col-5">
                <div class="form-row">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(e => e.Company.Name, new { @class = "form-control-label" })
                            @Html.TextBoxFor(e => e.Company.Name, new { @class = "form-control", @value = Model.Company.Name, @readonly = "" })
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(e => e.Company.RegistrationNumber, new { @class = "form-control-label" })
                            @Html.TextBoxFor(e => e.Company.RegistrationNumber, new { @class = "form-control", @readonly = "" })
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    @if (Model.Company.Structure == null)
                    {
                        <div class="col-6">
                            <div class="form-group">
                                @Html.LabelFor(e => e.Company.Structure.Name, new { @class = "form-control-label" })
                                @Html.TextBoxFor(e => e.Company.Structure.Name, new { @class = "form-control", @readonly = "", @id="structureTextbox" })
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-6">
                            <div class="form-group">
                                @Html.LabelFor(e => e.Company.StructureId, new { @class = "form-control-label" })
                                @Html.TextBoxFor(e => e.Company.Structure.Name, new { @class = "form-control textboxlink", @value = Model.Company.Structure.Name, @readonly = "" })
                            </div>
                        </div>
                    }

                    @if (Model.Company.Trust == null)
                    {
                        <div class="col-6">
                            <div class="form-group">
                                @Html.LabelFor(e => e.Company.TrustId, new { @class = "form-control-label" })
                                @Html.TextBoxFor(e => e.Company.TrustId, new { @class = "form-control", @readonly = "" })
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-6">
                            <div class="form-group">
                                @Html.LabelFor(e => e.Company.TrustId, new { @class = "form-control-label" })
                                @Html.TextBoxFor(e => e.Company.Trust.Name, new { @class = "form-control textboxlink", @value = Model.Company.Trust.Name, @readonly = "" })
                            </div>
                        </div>
                    }

                </div>

                <div class="form-row">
                    <div class="col-6">
                        @{
                            var billDate = Model.Company.FirstBillingDate.ToShortDateString();
                        }
                        <div class="form-group">
                            @Html.LabelFor(e => e.Company.FirstBillingDate, new { @class = "form-control-label" })
                            @Html.TextBoxFor(e => billDate, new { @class = "form-control", @readonly = "" })
                        </div>
                    </div>
                    <div class="col-6">
                        @{
                            var date = Model.Company.DirectorshipStartDate.ToShortDateString();
                        }
                        <div class="form-group">
                            @Html.LabelFor(e => e.Company.DirectorshipStartDate, new { @class = "form-control-label" })
                            @Html.TextBoxFor(e => date, new { @class = "form-control", @readonly = "" })
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-5">
                <ul class="list-group">
                    <li class="list-group-item  service-heading">Services</li>
                    @foreach(var service in Model.Company.CompanyServices)
                    {
                        <li class="list-group-item">@service.Service.Name</li>
                    }
                </ul>
            </div>

        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <button type="button" class="btn btn-info float-right" data-toggle="modal" data-target="#myModal">Assign Contacts</button>
        @Html.ActionLink("New Contact", "New", "Contacts", null, new { @class = "btn btn-info float-right", @style = "margin-right:10px" })
        <h4>Contacts</h4>
    </div>
    <div class="card-body">
        @if (Model.Company.CompanyContacts.Count() == 0)
        {
            <p>No Contacts for this company</p>
        }
        else
        {
            <table id="contacts" class="table display table-light">
                <thead>
                    <tr>
                        <th>Contact Name</th>
                        <th>Contact Email</th>
                        <th>Contact Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model.Company.CompanyContacts)
                    {
                        <tr>
                            <td>@contact.Contact.Fullname</td>
                            <td>@contact.Contact.Email</td>
                            <td>@contact.Contact.ContactNo</td>
                            <td>@Html.ActionLink("Remove", "RemoveContact", "Companies", new { id = contact.CompanyId, cid = contact.ContactId }, new { @class = "btn btn-danger float-right" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".display").DataTable();

            if ($('#Company_Structure_Name').val() != '') {
                $("#Company_Structure_Name").on("click", function () {
                    var url = '@Url.Action("Details", "Structures", new { id = "__id__" })';
                    window.location.href = url.replace('__id__', @Model.Company.StructureId);
                });
            };

            if ($('#Company_Trust_Name').val() != '') {
                $("#Company_Trust_Name").on("click", function () {
                    var url = '@Url.Action("Details", "Trusts", new { id = "__id__" })';
                    window.location.href = url.replace('__id__', @Model.Company.TrustId);
                });
            };

            $("#contacts .js-delete").on("click", function () {
                var button = $(this);
                if (confirm("Are you sure you want to delete this customer?")) {
                    $.ajax({
                        url: "/Companies/Delete" + button.attr("data-company-id"),
                        method: "DELETE",
                        success: function () {
                            //console.log("Success");
                            table.row(button.parents("tr")).remove().draw();
                        }
                    }); // ajax
                }
            }); // on click function
        }); // ready function
    </script>
}

