@model IEnumerable<Quadridge2.Models.Interaction>
@{
    ViewBag.Title = "Interactions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>@Html.ActionLink("New Interaction", "New", "Interactions", null, new { @class = "btn btn-primary" })</p>

@if (!Model.Any())
{
    <p> We do not have any interactions yet </p>
}
else
{
    <table id="interactions" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Client</th>
                <th>Interaction Type</th>
                <th>Edit / Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var interaction in Model)
            {
                <tr>
                    <td>@interaction.InteractionDate.ToShortDateString()</td>
                    <td>@interaction.Client.Name</td>
                    <td>@interaction.InteractionType</td>
                    <td>
                        <span>@Html.ActionLink("Edit", "Details", "Interactions", null, new { @class = "btn btn-primary" })</span>
                        <button data-interaction-id="@interaction.Id" class="btn btn-primary js-delete"><i class="fa fa-trash-o fa-lg"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#interactions").DataTable();

            $("#interactions .js-delete").on("click", function () {
                var button = $(this);
                if (confirm("Are you sure you want to delete this contact?")) {
                    $.ajax({
                        url: "/api/deals/" + button.attr("data-deal-id"),
                        method: "DELETE",
                        success: function () {
                            //console.log("Success");
                            table.row(button.parents("tr")).remove().draw();
                        }
                    }); // ajax
                }
            }); // on click function
        }); // ready function
    </script>
}

