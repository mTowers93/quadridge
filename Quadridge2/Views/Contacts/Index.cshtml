@model IEnumerable<Quadridge2.Models.Contact>

@{
    ViewBag.Title = "Contacts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>@Html.ActionLink("New Contact", "New", "Contacts", null, new { @class = "btn btn-primary" })</p>

@if (!Model.Any())
{
    <p> We do not have any Contacts yet </p>
}
else
{
    <table id="contacts" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Surname</th>
                <th>Company / Law firm / Bank</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@Html.ActionLink(contact.Firstname, "Details", "Contacts", new { id = contact.Id }, null)</td>
                    <td>@Html.ActionLink(contact.Surname, "Details", "Contacts", new { id = contact.Id }, null)</td>
                    @if  (contact.CompanyId != null)
                    {
                        <td>@contact.Company.Name</td>
                    } else if (contact.BankId != null)
                    {
                        <td>@contact.Bank.Name</td>
                    } else if (contact.LawfirmId != null)
                    {
                        <td>@contact.LawFirm.Name</td>
                    } else
                    {
                        <td></td>
                    }
                    <td>
                        <button class="btn btn-primary">Edit</button>
                        <button data-customer-id="@contact.Id" class="btn btn-primary js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#contacts").DataTable();

            $("#contacts .js-delete").on("click", function () {
                var button = $(this);
                if (confirm("Are you sure you want to delete this contact?")) {
                    $.ajax({
                        url: "/api/contacts/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        success: function () {
                            //console.log("Success");
                            table.row(button.parents("tr")).remove().draw();
                        }
                    }); // ajax
                }
            }); // on click function
        }); // ready function
    </script>
}