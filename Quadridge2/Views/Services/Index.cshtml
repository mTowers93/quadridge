@model IEnumerable<Quadridge2.Models.Service>
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <button class="btn btn-primary" data-target="addService" data-toggle="modal" id="btnShowModal">New Service</button>
</div>
<div class="modal fade" id="addService" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add New Service</h4>
            </div>
            <div class="modal-body">
                <form id="ServiceForm">
                    <label for="service">Service Name</label>
                    <input type="text" id="service" class="form-control" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" id="saveService" class="btn btn-primary">Submit</button>
                <button type="button" id="btnHideModal" class="btn btn-primary">Hide</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDelete" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete</h4>
            </div>
            <div class="modal-body">
                <form>
                    <input id="deleteId" type="hidden" value=""/>
                </form>
                <p>Are you sure you want to delete this service?</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="yes" class="btn btn-primary">Yes</button>
                <button type="button" id="hideConfirmModal" class="btn btn-primary">No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Service</h4>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" value="" id="editId" />
                    <label for="service">Service Name</label>
                    <input type="text" id="editModalText" class="form-control"/>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" id="saveService" class="btn btn-primary">Submit</button>
                <button type="button" id="btnHideEditModal" class="btn btn-primary">Hide</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @if (Model == null)
    {
        <p>There are no sevices, please add one.</p>
    }
    else
    {
        <table id="services" class="table table-bordered table-hover">
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.Name</td>
                    <td><button class="btn btn-info edit" onclick="editGroupName('@service.Id', '@service.Name'); return false;">Edit</button>  <button class="btn btn-danger delete" data-service-id=@service.Id data-target="#confirmDelete"><i class="fa fa-trash-o fa-lg"></i></button></td>
                </tr>
            }
        </table>
    }
</div>

@section Scripts
{
    <script>

        function editGroupName(id, name) {
            $('input#editId').val(id);
            $('#editModalText').val(name);
        };

        $(document).ready(function () {

            var button;

            $("#btnShowModal").click(function () {
                button = $(this);
                $("#addService").modal('show');
            });           

            $("#btnHideModal").on("click",function () {
                $("#addService").modal('hide');
            });

            $("#btnHideEditModal").on("click", function () {
                $("#editModal").modal("hide");
            });

            $(".edit").on("click", function () {
                $("#editModal").modal("show");
            });

            $("#hideConfirmModal").on("click", function () {
                $("#confirmDelete").modal('hide');
            });

            $(".delete").on("click", function () {
                button = $(this);
                $("#deleteId").val($(this).attr("data-service-id"));
                $("#confirmDelete").modal('show');
            });

            $("#yes").on("click", function () {
                console.log("Ive been pushed");
                $.ajax({
                    url: "/Services/DeleteService/" + $("#deleteId").val(),
                    method: "DELETE",
                    success: function () {
                        toastr.success("Service removed");
                        $("#confirmDelete").modal("hide");
                        $(button.parent("tr")).remove();
                        console.log("Success");
                        location.reload();
                    }
                });
            });

            $("#saveService").click(function (e) {
                e.preventDefault();
                var service = {}
                service.name = $("#service").val();
                $.ajax(
                    {
                        method: "post",
                        url: "/Services/SaveService",
                        data: JSON.stringify(service),
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json',
                        complete: function () {
                            toastr.success("Service successfully added");
                            $("#addService").modal('hide');
                            var inside = "<td>" + service.name + "/<td>"
                            $(button.parent("table")).append("<tr>" + inside + "</tr>");
                            location.reload();
                        },
                        fail: function () {
                            toastr.error("Failed to add service.");
                        }
                    }
                )
            });
        });

    </script>
}

