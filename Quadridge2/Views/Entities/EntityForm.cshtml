@model Quadridge2.ViewModels.Entities.EntityFormViewModel
@{
    ViewBag.Title = "Entity Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("Save", "Entities"))
        {
            <div class="form-row">
                <div class="col-3">
                    <div class="form-group">
                        @Html.LabelFor(e => e.Entity.Name, new { @class = "form-control-label" })
                        @Html.TextBoxFor(e => e.Entity.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(e => e.Entity.Name)
                    </div>
                </div>

            </div>

            <div class="form-row">
                <div class="form-group">
                    @Html.LabelFor(e => e.Entity.StructureId, new { @class = "form-control-label" })
                    @Html.DropDownListFor(e => e.Entity.StructureId, new SelectList(Model.Structures, "Id", "Name"), "", new { @class = "form-control" })
                    @Html.ValidationMessageFor(e => e.Entity.StructureId)
                </div>
            </div>

            <div class="form-row">
                <table>
                    @foreach (var service in Model.Services)
                    {
                        <tr>
                            <td>@service.Name</td>
                            <td><input type="checkbox" name="@service.Name" value="@service.Id" /></td>
                        </tr>
                    }
                </table>
            </div>

            <div class="form-row">
                <div class="form-group">
                    @Html.LabelFor(e => e.Entity.DirectorshipStartDate, new { @class = "form-control-label" })
                    @Html.TextBoxFor(e => e.Entity.DirectorshipStartDate, new { @class = "form-control datepicker-here", @data_language = "en", @autocomplete = "off" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    @Html.LabelFor(e => e.Entity.FirstBillingDate, new { @class = "form-control-label" })
                    @Html.TextBoxFor(e => e.Entity.FirstBillingDate, new { @class = "form-control datepicker-here", @data_language = "en", @autocomplete = "off" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    @Html.LabelFor(e => e.Entity.TrustId, new { @class = "form-control-label" })
                    @Html.DropDownListFor(e => e.Entity.TrustId, new SelectList(Model.Trusts, "Id", "Name"), "Please Select", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    @Html.LabelFor(e => e.Entity.BillingBasisId, new { @class = "form-control-label" })
                    @Html.DropDownListFor(e => e.Entity.BillingBasisId, new SelectList(Model.BillingBases, "Id", "Basis"), "", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    @Html.LabelFor(e => e.Entity.FeeTypeId, new { @class = "form-control-label" })
                    @Html.DropDownListFor(e => e.Entity.FeeTypeId, new SelectList(Model.FeeTypes, "Id", "Type"), "", new { @class = "form-control" })
                </div>
            </div>

            @Html.AntiForgeryToken()
            <button class="btn btn-primary">Save</button>

        }
    </div>
</div>

