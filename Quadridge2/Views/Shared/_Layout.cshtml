<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - Corporate Fiduciary and Secretarial Services</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="all,follow">
    <!-- Google fonts - Poppins -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700">
    <!-- theme stylesheet-->
    @Styles.Render("~/Content/css")
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body>
    <div class="page">
        <!-- Main Navbar-->
        @Html.Partial("_Header")
        <div class="page-content d-flex align-items-stretch">
            <!-- Side Navbar -->
            @Html.Partial("_SideBar")
            <div class="content-inner">
                <!-- Page Header                                           PUT ON EVERY PAGE--> 
                <header class="page-header">
                    <div class="container-fluid">
                        <h2 class="no-margin-bottom">@ViewBag.Title</h2>
                    </div>
                </header>
                <!-- Dashboard Counts Section-->
                <section class="dashboard-counts no-padding-bottom">
                    <div class="container-fluid">
                        @RenderBody()
                        
                    </div>
                </section>
                <!-- Page Footer-->
                <footer class="main-footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <p>Quadridge &copy; 2017-@DateTime.Now.Year</p>
                            </div>
                            <div class="col-sm-6 text-right">
                                <p>Developed by Towers Design</p>

                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <!-- JavaScript files-->
    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/dashboard")
    @RenderSection("scripts", required: false)
    <script src="~/Content/dashboard/vendor/popper.js/umd/popper.min.js"></script>
    <script src="~/Content/dashboard/vendor/jquery.cookie/jquery.cookie.js"></script>
</body>
</html>

@section scripts
{
<scripts>
    $(document).ready(function() {
    $('ul.nav.navbar-nav').find('a[href="' + location.pathname + '"]')
    .closest('li').addClass('active');
    });
</scripts>
}

