@model Quadridge2.ViewModels.ClientFormViewModel
@{
    ViewBag.Title = "New Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("Save", "Clients"))
        {
        <div class="form-row">
            <div class="col-3">
                <div class="form-group">
                    @Html.LabelFor(m => m.Client.Name, new { @class = "form-control-label" })
                    @Html.TextBoxFor(m => m.Client.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Client.Name)
                </div>
            </div>

        </div>

        <div class="form-row">
            <div class="col-3">
                <div class="form-group">
                    @Html.LabelFor(m => m.Client.FirstAddressLine, new { @class = "form-control-label" })
                    @Html.TextBoxFor(m => m.Client.FirstAddressLine, new { @class = "form-control" })
                </div>
            </div>

            <div class="col-3">
                <div class="form-group">
                    @Html.LabelFor(m => m.Client.SecondAddressLine, new { @class = "form-control-label" })
                    @Html.TextBoxFor(m => m.Client.SecondAddressLine, new { @class = "form-control" })
                </div>
            </div>
        </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Client.Suburb, new { @class = "form-control-label" })
                @Html.TextBoxFor(m => m.Client.Suburb, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Client.City, new { @class = "form-control-label" })
                @Html.TextBoxFor(m => m.Client.City, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Client.Zip, new { @class = "form-control-label" })
                @Html.TextBoxFor(m => m.Client.Zip, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Client.ProvinceId, new { @class = "form-control-label" })
                @Html.DropDownListFor(m => m.Client.ProvinceId, new SelectList(Model.Provinces, "Id", "Name"), "", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Client.CountryId, new { @class = "form-control-label" })
                @Html.DropDownListFor(m => m.Client.CountryId, new SelectList(Model.Countries, "Id", "Name"), "", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Client.CountryId)
            </div>

            @Html.AntiForgeryToken()
            <button class="btn btn-primary">Save</button>

        }
        </div>
</div>


    @section scripts
{
        @Scripts.Render("~/bundles/jqueryval")
    }

