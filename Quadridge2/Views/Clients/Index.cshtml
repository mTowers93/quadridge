@model  IEnumerable<Quadridge2.Models.Client>
@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>@Html.ActionLink("New Client", "New", "Clients", null, new { @class = "btn btn-primary" })</p>

@if (!Model.Any())
{
    <p> We do not have any clients yet </p>
}
else
{
    <table id="clients" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@Html.ActionLink(client.Firstname + " " + client.Surname, "Details", "Clients", new { id = client.Id }, null)</td>
                    <td>
                        <button class="btn btn-primary">Edit</button>
                        <button data-customer-id="@client.Id" class="btn btn-primary js-delete">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#clients").DataTable();

            $("#customers .js-delete").on("click", function () {
                var button = $(this);
                if (confirm("Are you sure you want to delete this customer?")) {
                    $.ajax({
                        url: "/api/customers/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        success: function () {
                            //console.log("Success");
                            button.parents("tr").remove();
                        }
                    }); // ajax
                }
            }); // on click function
        }); // ready function
    </script>
}

