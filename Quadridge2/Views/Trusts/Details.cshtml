@model Quadridge2.Models.Trust
@{
    ViewBag.Title = "Trust Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="form-row">
            <div class="col-5">
                <div class="form-row">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(t => t.Name, new { @class = "form-control-label" })
                            @Html.TextBoxFor(t => t.Name, new { @class = "form-control", @value = Model.Name, @readonly = "" })
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(t => t.Donor, new { @class = "form-control-label" })
                            @Html.TextBoxFor(t => t.Donor, new { @class = "form-control", @readonly = "" })
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    @if (Model.Structure == null)
                    {
                        <div class="col-6">
                            <div class="form-group">
                                @Html.LabelFor(t => t.StructureId, new { @class = "form-control-label" })
                                @Html.TextBoxFor(t => t.Structure.Name, new { @class = "form-control", @readonly = "", @id = "structureTextbox" })
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-6">
                            <div class="form-group">
                                @Html.LabelFor(t => t.StructureId, new { @class = "form-control-label" })
                                @Html.TextBoxFor(t => t.Structure.Name, new { @class = "form-control textboxlink", @value = Model.Structure.Name, @readonly = "" })
                            </div>
                        </div>
                    }

                    <div class="col-6">
                        @{ 
                            var appointDate = Model.AppointmentDate.ToShortDateString();
                        }
                        <div class="form-group">
                            @Html.LabelFor(t => t.AppointmentDate, new { @class = "form-control-label" })
                            @Html.TextBoxFor(t => appointDate, new { @class = "form-control", @readonly = "" })
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-6">
                        <div class="form-group">
                            @Html.LabelFor(t => t.TrusteeRepresentitive, new { @class = "form-control-label" })
                            @Html.TextBoxFor(t => t.TrusteeRepresentitive, new { @class = "form-control", @readonly = "" })
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-5">
                <ul>
                    <li class="list-group-item service-heading">Services</li>
                    @foreach(var service in Model.TrustServices)
                    {
                        <li class="list-group-item">@service.Service.Name</li>
                    }
                </ul>
            </div>

        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h4>Companies</h4>
    </div>
    <div class="card-body">
        @if (Model.Companies.Count() == 0)
        {
            <h4>No Companies for this trust</h4>
            <button>Add companies</button>
        }
        else
        {
            <table id="contacts" class="table table-light table-bordered">
                <thead>
                    <tr>
                        <th>Company Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Model.Companies)
                    {
                        <tr>
                            <td>@Html.ActionLink(company.Name, "Details", "Companies", new { id = company.Id }, null)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#contacts").DataTable();

            if ($('#Structure_Name').val() != '') {
                $('#Structure_Name').css('cursor', 'pointer');
                $('#Structure_Name').mouseover();
                $("#Structure_Name").on("click", function () {
                    var url = '@Url.Action("Details", "Structures", new { id = "__id__" })';
                    window.location.href = url.replace('__id__', @Model.StructureId);
                });
            };

            $("#contacts .js-delete").on("click", function () {
                var button = $(this);
                if (confirm("Are you sure you want to delete this customer?")) {
                    $.ajax({
                        url: "/Companies/Delete" + button.attr("data-company-id"),
                        method: "DELETE",
                        success: function () {
                            //console.log("Success");
                            table.row(button.parents("tr")).remove().draw();
                        }
                    }); // ajax
                }
            }); // on click function
        }); // ready function
    </script>
}